@{
    ViewData["Title"] = "Register";
}

<!-- Section: Design Block -->
<section class="text-center container">
    <!-- Background image -->
    <div class="p-5 bg-image" style="
        background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');
        height: 300px;
        "></div>
    <!-- Background image -->

    <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
        <div class="card-body py-5 px-md-5">

            <div class="row d-flex justify-content-center">
                <div class="col-lg-8">
                    <h2 class="fw-bold mb-5">Sign In now</h2>
                    <form>

                        <!-- Email input -->
                        <div class="form-outline mb-4" data-mdb-input-init>
                            <input type="email" id="email" class="form-control" />
                            <label class="form-label" for="email">Email address</label>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4" data-mdb-input-init>
                            <input type="password" id="password" class="form-control" />
                            <label class="form-label" for="password">Password</label>
                        </div>

                        <a href="/authen/forgotpassword" class="mb-4">Forgot password?</a>

                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block mb-4">
                            Sign In
                        </button>

                        <!-- Register buttons -->
                        <div class="text-center">
                            <p>or sign up with:</p>
                            <button type="button" class="btn btn-link btn-floating mx-1">
                                <i class="fab fa-facebook-f"></i>
                            </button>

                            <button type="button" class="btn btn-link btn-floating mx-1">
                                <i class="fab fa-google"></i>
                            </button>

                            <button type="button" class="btn btn-link btn-floating mx-1">
                                <i class="fab fa-twitter"></i>
                            </button>

                            <button type="button" class="btn btn-link btn-floating mx-1">
                                <i class="fab fa-github"></i>
                            </button>
                        </div>

                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Don't have an account? <a href="/authen/register"
                                                      class="link-danger">Register</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Section: Design Block -->

<script>

    $('form').submit(async (event) => {
        event.preventDefault();

        $('form button[type="submit"]').prop('disabled', true);

        var email = $('#email').val();
        var password = $('#password').val();

        if (email.trim() === '' || password.trim() === '') {
            showToast('Please fill in all fields');
            $('form button[type="submit"]').prop('disabled', false);
            return;
        }

        var data = {
            email: email,
            password: password
        };

        try {
            const response = await fetch('http://localhost:5000/api/User/login', {
                method: 'POST',
                headers: {
                    'Accept': '*/*',
                    'Content-Type': 'application/json-patch+json'
                },
                body: JSON.stringify(data)
            });

            const responseData = await response.json();

            if (responseData.isSuccess) {
                localStorage.setItem('user-data', JSON.stringify(responseData.data));
                showToast(responseData.message);
                window.location.href = '/';
            } else {
                showToast(responseData.message);
            }
        } catch (error) {
            console.error('There was an error!', error);
            showToast('There was an error!');
        } finally {
            $('form button[type="submit"]').prop('disabled', false);
        }
    });

</script>